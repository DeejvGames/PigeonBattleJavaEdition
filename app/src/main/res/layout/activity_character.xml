<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/characterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:text="@string/character_button"
                android:textAlignment="center"
                android:textColor="@color/adaptive"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/lexend_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/characterImageView"
                android:layout_width="196dp"
                android:layout_height="196dp"
                android:layout_marginTop="64dp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/characterTitle"
                app:srcCompat="@drawable/pigeon" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/powerUpImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-32dp"
                android:layout_marginStart="-68dp"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                app:layout_constraintStart_toEndOf="@id/characterImageView"
                app:layout_constraintBottom_toBottomOf="@+id/characterImageView"
                app:srcCompat="@drawable/pigeonin" />

            <TextView
                android:id="@+id/characterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:text="@string/default_pigeon"
                android:textColor="@color/adaptive"
                android:textSize="24sp"
                android:textAlignment="center"
                android:fontFamily="@font/lexend_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/powerUpImageView" />

            <TextView
                android:id="@+id/characterProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_pigeon_benefits"
                android:layout_margin="4dp"
                android:textColor="@color/adaptive"
                android:textSize="16sp"
                android:fontFamily="@font/lexend_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/characterName" />

            <Button
                android:id="@+id/customizeCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/customize_character"
                android:backgroundTint="@color/m3"
                android:textColor="@color/theme"
                android:onClick="customizeCharacter"
                android:fontFamily="@font/lexend_regular"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/characterProperties" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                app:layout_constraintTop_toBottomOf="@id/customizeCharacter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>